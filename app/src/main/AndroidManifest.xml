<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.trichain.hairdresser">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".user.activities.OrderSummary"
            android:theme="@style/AppThemeMaterial"/>
        <activity
            android:name=".user.activities.CartItemsActivity"
            android:theme="@style/AppThemeMaterial"/>
        <activity
            android:name=".user.activities.ServiceDetailActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".user.activities.ServicesActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".user.activities.AddressActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".user.activities.RegisterActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".user.activities.LoginActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity android:name=".user.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>